@@ -25,6 +25,34 @@ arm-pmu {
 
 	soc@0 {
 		rifsc: rifsc@42080000 {
+			m_can1: can@402d0000 {
+				compatible = "bosch,m_can";
+				reg = <0x402d0000 0x400>, <0x40310000 0x1400>;
