+++ b/arch/arm64/boot/dts/st/stm32mp251.dtsi
@@ -2502,6 +2502,7 @@ rcc: clock-controller@44200000 {
 			reg = <0x44200000 0x10000>;
 			#clock-cells = <1>;
 			#reset-cells = <1>;
+			#access-controller-cells = <1>;
