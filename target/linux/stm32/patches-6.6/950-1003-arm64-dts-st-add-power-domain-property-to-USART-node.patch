 			};
 
@@ -336,6 +340,7 @@ usart6: serial@40220000 {
 				       <&hpdma 20 0x40 0x3021>;
 				dma-names = "rx", "tx";
 				access-controllers = <&rifsc 36>;
+				power-domains = <&CLUSTER_PD>;
 				status = "disabled";
 			};
 
@@ -393,6 +398,7 @@ usart1: serial@40330000 {
 				       <&hpdma 10 0x40 0x3021>;
 				dma-names = "rx", "tx";
 				access-controllers = <&rifsc 31>;
+				power-domains = <&CLUSTER_PD>;
 				status = "disabled";
 			};
 
