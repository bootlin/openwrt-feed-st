+++ b/arch/arm/boot/dts/st/stm32mp157c-ev1.dts
@@ -680,6 +680,9 @@ &timers2 {
 	/delete-property/dmas;
 	/delete-property/dma-names;
 	status = "disabled";
+	counter {
+		status = "okay";
+	};
 	pwm {
 		pinctrl-0 = <&pwm2_pins_a>;
 		pinctrl-1 = <&pwm2_sleep_pins_a>;
@@ -695,6 +698,9 @@ &timers8 {
